<% content_for :title, "La boîte à #{@person.name}" %>

<div class="flex flex-col md:flex-row h-screen overflow-auto">
  <!-- Left section: Person -->
  <div class="w-full md:w-1/3 p-4 bg-blue-950 flex flex-col justify-center">
    <h1 class="text-center mb-8 text-white text-2xl">La boîte à <%= @person.name %></h1>
    <div class="flex justify-center">
      <%= render @person %>
    </div>
  </div>

  <!-- Center & Right section: Quotes -->
  <div class="w-full md:w-2/3 p-4 bg-slate-200 md:overflow-auto">
    <%= render "people/quotes", person: @person %>
  </div>
</div>