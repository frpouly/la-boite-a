<div id="<%= dom_id person %>" class="person-card flex flex-col hover:bg-neutral-500 hover:cursor-pointer bg-white dark:bg-neutral-700 shadow-sm border border-slate-200 dark:border-neutral-600 rounded-lg m-6 w-96" data-link="<%= show_by_name_path(name: person.name) %>">
  <div class="m-2.5 overflow-hidden rounded-md h-80 flex justify-center items-center">
    <img class="w-full h-full object-cover" src="<%= person.picture_url %>" alt="profile-picture" />
  </div>
  <div class="p-6 text-center">
    <h4 class="mb-2.5 text-xl font-semibold text-slate-800 dark:text-white">
      <%= person.name %>
    </h4>
  </div>
</div>