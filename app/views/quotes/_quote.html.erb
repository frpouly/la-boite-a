<section id="<%= dom_id quote %>" class="quote-button default-quote-button w-full md:w-auto m-1 <%= "hidden" if quote.id == @play_id %>" data-id="<%= quote.id %>">
  <audio id="audio-<%= quote.id %>" preload="none">
    <source src="<%= quote.audio_url %>" type="audio/mpeg">
  </audio>
  
  <button class="w-full bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-8 border border-gray-400 rounded shadow">
     <%= quote.name %>
  </button>

  <span class="sr-only">
    Lecture audio de la citation intitulée « <%= quote.name %> », prononcée par <%= quote.person.name %>.
  </span>
</section>

<section id="<%= dom_id quote %>_share" class="w-full md:w-auto m-1 hidden">
  <button class="w-full flex bg-white z-10 hover:bg-gray-100 text-gray-800 font-semibold py-2 px-8 border border-gray-400 rounded shadow justify-center">
    <audio id="audio-<%= quote.id %>" preload="none">
      <source src="<%= quote.audio_url %>" type="audio/mpeg">
    </audio>
    
    <span class="quote-button quote-button-share inline-block pr-4" data-id="<%= quote.id %>"><%= quote.name %></span>
    <span class="copy-quote-url" data-id="<%= quote.id %>">
      <svg class="icon icon--xs" width="20" height="20" viewBox="0 0 16 16">
        <title>Copier le lien</title>
        <path d="M12,2h.5A1.5,1.5,0,0,1,14,3.5v10A1.5,1.5,0,0,1,12.5,15h-9A1.5,1.5,0,0,1,2,13.5V3.5A1.5,1.5,0,0,1,3.5,2H4" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="2"></path>
        <rect x="6" y="1" width="4" height="2" fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></rect>
        <polyline class="copy-to-clip__icon-check" points="5 9 7 11 11 7" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></polyline>
      </svg>
    </span>
    <span id="<%= dom_id quote %>_copied" class="hidden">
      <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
      </svg>
    </span>
  </button>
</section>

<% if quote.id == @play_id %>
<section <%= %(id=quote_to_play) if quote.id == @play_id %> class="quote-button w-full md:w-auto m-1 animate-bounce <%= "hidden" if quote.id != @play_id %>" data-id="<%= quote.id %>">
  <audio id="audio-<%= quote.id %>" preload="auto">
    <source src="<%= quote.audio_url %>" type="audio/mpeg">
  </audio>
  
  <button class="w-full bg-cyan-500 hover:bg-gray-100 text-gray-800 font-semibold py-2 px-8 border border-gray-400 rounded shadow">
    <%= quote.name %>
  </button>
</section>
<% end %>
